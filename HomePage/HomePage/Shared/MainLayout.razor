@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime;

<div class="page">
    <main>
        <div style="background-color:aquamarine" class="top-row px-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="">LOGO(ちゆき)</a>
            </div>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">INFORMATION</a>
