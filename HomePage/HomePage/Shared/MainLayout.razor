@code {

    protected override async Task OnAfterRenderAsync(bool first)
    {
        await callJS();
        await base.OnInitializedAsync();
    }

    private async Task callJS()
    {
        await JSRuntime.InvokeVoidAsync("FromBlazorFunc");
    }
}